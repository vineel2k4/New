   "source": [
    "n = int(input(\"Enter a positive integer: \"))\n",
    "\n",
    "if n <= 0:\n",
    "    print(\"Please enter a positive integer.\")\n",
    "else:\n",
    "    total = 0\n",
    "    for number in range(2, n + 1, 2): \n",
    "        total += number\n",
    "    print(f\"The sum of all even numbers between 1 and {n} is: {total}\")"
   ]
